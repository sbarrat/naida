<?//Fichero de alta, modificacion y baja de Proveedoresif ((isset($_POST['mprov'])) || (isset($_POST['bprov'])) || (isset($_POST['aprov'])) || (isset($_GET['pro']))){$id = $_POST['idpro'];$nombre = $_POST['Nombre'];$direccion = $_POST['Direccion'];$nif = $_POST['nif'];$cp = $_POST['cp'];$ciudad = $_POST['ciudad'];$telefono = $_POST['telefono'];$fax = $_POST['fax'];$mail = $_POST['mail'];$web = $_POST['web'];//Parte de modificacion de proveedoresif (isset($_POST['mprov']))	{	$modprov="Update Proveedores set Nombre = '$nombre', Direccion = '$direccion',nif = '$nif', cp = '$cp', ciudad = '$ciudad', telefono = '$telefono', fax = '$fax', mail = '$mail', web = '$web' where id like '$id'";	if($rmodif = mysql_db_query($dbname, $modprov, $con))	echo $Nombre ."modificado con exito";	else	echo "No se ha podido modificar ".$Nombre;	}//fin de la parte de modificacion de proveedores//Parte de baja de proveedoresif (isset($_POST['bprov']))	{	$baprov="Delete from Proveedores where id like '$id'";	if($rbaprov = mysql_db_query($dbname, $baprov, $con))	echo "El proveedor ". $nombre ." ha sido borrado";	else	echo "No se ha podido dar de baja el proveedor ". $nombre;	}//fin de la parte de baja de proveedores//Parte de alta de proveedoresif (isset($_POST['aprov']))	{	$aprove="Insert into Proveedores (Nombre,Direccion,nif,cp,telefono,web,mail,ciudad,fax) values ('$nombre','$direccion','$nif','$cp','$telefono','$web','$mail','$ciudad','$fax')";	if($raprove = mysql_db_query($dbname, $aprove, $con))	echo "El Proveedor ". $nombre ." ha sido dado de alta";	else	echo "No se ha podido dar de alta el proveedor ". $nombre;	}//Fin de la parte de alta de proveedores//Parte de recogidad de datos del proveedor seleccionado//Coje los datos pasados por el enlace y los devuelve al formularioif (isset($_GET['pro']))	{	$id = $_GET['pro'];	$selprov = "Select * from Proveedores where id like '$id'";	$consel = mysql_db_query($dbname,$selprov,$con);	$dev = mysql_fetch_array($consel);	}}else{$id = "";$nombre = "";$direccion = "";$nif = "";$cp = "";$ciudad = "";$telefono = "";$fax = "";$mail = "";$web = "";$dev="";}?><table width='100%'><tr><td><form name='aproveedores' method='post' action='index.php?id=2'><table><tr><th colspan='2'<? print($_SESSION[color2]); ?>><img src='imagenes/proveedores.png'><center><h3>Proveedores</h3></center></th></tr><tr><td <? print($_SESSION[color2]); ?>><b>Nombre</td><td <? print($_SESSION[color1]); ?>><? print("<input type='hidden' name='idpro' value='$dev[id]'></input>"); ?><input type='text' size='40' name='Nombre' <? print("value='$dev[Nombre]'"); ?>></input></td></tr><tr><td <? print($_SESSION[color2]); ?>><b>Direccion</td><td <? print($_SESSION[color1]); ?>><input type='text' size='40' name='Direccion' <? print("value='$dev[Direccion]'"); ?>></input></td></tr><tr><td <? print($_SESSION[color2]); ?>><b>CIF</td><td <? print($_SESSION[color1]); ?>><input type='text' size='40' name='nif' <? print("value='$dev[nif]'"); ?>></input></td></tr><tr><td <? print($_SESSION[color2]); ?>><b>Codigo Postal</td><td <? print($_SESSION[color1]); ?>><input type='text' size='40' name='cp' <? print("value='$dev[cp]'"); ?>></input></td></tr><tr><td <? print($_SESSION[color2]); ?>><b>Ciudad</td><td <? print($_SESSION[color1]); ?>><input type='text' size='40' name='ciudad' <? print("value='$dev[ciudad]'"); ?>></input></td></tr><tr><td <? print($_SESSION[color2]); ?>><b>Telefono</td><td <? print($_SESSION[color1]); ?>><input type='text' name='telefono' <? print("value='$dev[telefono]'"); ?>></input></td></tr><tr><td <? print($_SESSION[color2]); ?>><b>Fax</td><td <? print($_SESSION[color1]); ?>><input type='text' name='fax' <? print("value='$dev[fax]'"); ?>></input></td></tr><tr><td <? print($_SESSION[color2]); ?>><b>email</td><td <? print($_SESSION[color1]); ?>><input type='text' size='40' name='mail' <? print("value='$dev[mail]'"); ?>></input></td></tr><tr><td <? print($_SESSION[c